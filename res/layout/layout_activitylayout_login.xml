<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/layoutlogin"
    android:focusable="true"   
android:focusableInTouchMode="true"
    >
    
    <EditText
        android:id="@+id/login_ET_User"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:hint="请输入您的登陆账号"
        android:gravity="center"
        android:focusable="false"
        android:background="@drawable/layoutloginbutton" />

    <EditText
       android:layout_below="@id/login_ET_User" 
        android:id="@+id/login_ET_Passwork"
        android:layout_width="280dp"
        android:layout_height="40dp"
         android:focusable="false"
        android:layout_centerHorizontal="true"
        android:hint="请输入您的登陆密码"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/layoutloginbutton" />
    
    <Button 
        android:id="@+id/login_ET_ForgetPasswork"
        android:layout_below="@id/login_ET_Passwork" 
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="#323232"
        android:textColor="#ffffff"
        android:text="忘记密码？"
        />
    
    <Button 
        android:id="@+id/Register_button"
        android:layout_below="@id/login_ET_Passwork" 
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="#323232"
        android:textColor="#ffffff"
        android:text="注册"
        />
    
    <Button 
        android:layout_below="@id/Register_button" 
        android:layout_marginTop="20dp"
        android:id="@+id/SignIn_button"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@drawable/layoutloginbutton"
        android:textColor="#323232"
        android:text="登陆"
        />
    
</RelativeLayout>
